{
  "name": "financiamiento-elecciones-2014",
  "version": "1.0.0",
  "description": "Esta visualización muestra las donaciones recibidas declaradas por los partidos políticos para cada una de las listas políticas en las Elecciones Nacionales uruguayas del año 2014.",
  "private": true,
  "main": "server.js",
  "scripts": {
    "lint": "jshint src/js/main.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build:copy": "cp -R src dist",
    "build:copy-jq": "cp node_modules/jquery/dist/jquery.min.js dist/js/vendor/",
    "build:html": "htmlmin src/index.html -o dist/index.html",
    "build:js": "browserify src/js/main.js | uglifyjs -mc --screw-ie8 > dist/js/main.js",
    "build:css": "uglifycss --ugly-comments src/css/style.css > dist/css/style.css",
    "build:image": "imagemin src/images/* -o dist/images/",
    "build:json": "json-minify src/data.json > dist/data.json",
    "build": "npm run build:copy && npm run build:copy-jq && npm run build:html && npm run build:js && npm run build:css && npm run build:image && npm run build:json",
    "watch:bundle": "watchify src/js/main.js -o dist/js/main.js -v",
    "start": "nodemon --exec 'npm run build && babel-node server.js' --ignore dist/",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://bryant1410@github.com/bryant1410/financiamiento-elecciones-2014.git"
  },
  "author": "Santiago Castro",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bryant1410/financiamiento-elecciones-2014/issues"
  },
  "homepage": "https://github.com/bryant1410/financiamiento-elecciones-2014",
  "dependencies": {
    "fancybox": "^3.0.0",
    "jquery": "^3.1.0",
    "sigma-webpack": "^1.1.1-webpack",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-stage-2": "^6.13.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "browserify-shim": "^3.8.12",
    "finalhandler": "^0.5.0",
    "gh-pages": "^0.11.0",
    "htmlmin": "0.0.6",
    "imagemin-cli": "^3.0.0",
    "jshint": "^2.9.2",
    "json-minify": "^1.0.0",
    "live-server": "^1.1.0",
    "nodemon": "^1.10.0",
    "rimraf": "^2.5.4",
    "serve-static": "^1.11.1",
    "uglifycss": "0.0.20",
    "uglifyjs": "^2.4.10"
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jquery": "global:$"
  }
}
